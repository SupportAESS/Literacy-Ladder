<!-- View Product Modal -->
<div id="view-product-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>View Product</h2>
    <div id="filter-options">
      <label for="filter-all">
        <input type="radio" name="filter-type" id="filter-all" value="all" checked>
        All Products
      </label>
      <label for="filter-genre">
        <input type="radio" name="filter-type" id="filter-genre" value="genre">
        Filter by Genre
      </label>
      <label for="filter-name">
        <input type="radio" name="filter-type" id="filter-name" value="name">
        Search by Name
      </label>
    </div>
    <div id="genre-filter" style="display: none;">
      <select name="genre" id="genre-select">
        <option value="">Select Genre</option>
        <option value="Fiction">Fiction</option>
        <option value="Non-fiction">Non-fiction</option>
        <!-- Add more genres as needed -->
      </select>
    </div>
    <div id="name-filter" style="display: none;">
      <input type="text" id="name-search" placeholder="Enter product name">
    </div>
    <button id="fetch-products" class="button">Fetch Products</button>
    <!-- Product List (Populated Dynamically) -->
    <div id="product-list">
      <!-- Product items will be populated dynamically here -->
    </div>
  </div>
