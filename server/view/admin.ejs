  <center><h1>Admin Deshboard</h1></center>
  <div class="container">
    <div class="section" id="user-management">
      <h2>User Management</h2>
      <div id="user-list">
        <!-- User list will be populated dynamically -->
      </div>
      <button id="add-user-btn" class="button">Add User</button>
    </div>
    <div class="section" id="product-management">
      <h2>Product Management</h2>
      <div id="product-list">
        <!-- Product list will be populated dynamically -->
      </div>
      <button id="add-product-btn" class="button">Add Product</button>
      <button id="remove-product-btn" class="button">Remove Product</button>
      <button id="update-product-btn" class="button">Update Product</button>
      <button id="view-product-btn" class="button">View Product</button>
    </div>
    <div class="section" id="purchase-history">
      <h2>Sales Data</h2>
      <div id="filter">
        <label for="start-date">Start Date:</label>
        <input type="date" id="start-date">
    
        <label for="end-date">End Date:</label>
        <input type="date" id="end-date">

        <div id="chart-type">
          <label for="chart-select">Select Chart Type:</label>
          <select id="chart-select">
            <option value="line">Line Chart</option>
            <option value="bar">Bar Chart</option>
            <option value="pie">Pie Chart</option>
            <!-- Add more chart types if needed -->
          </select>
        </div>
        
    
        <button id="apply-filter" class="button">Apply Filter</button>
      </div>
      <div id="purchase-list">
        <!-- Purchase history will be populated dynamically -->
      </div>
      <div id="sales-chart-container">
        <canvas id="sales-chart"></canvas>
      </div>
    </div>
    
